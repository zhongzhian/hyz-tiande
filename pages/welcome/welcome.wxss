/* pages/welcome/welcome.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  text-align: center;
}

.welcome-helloword {
  text-align: center;
  font-size: 50rpx;
  padding: 50rpx;
}

.welcome-left {
  position: absolute;
  left: 0;
  right: 50%;
  top: 0;
  bottom: 0;
  padding: 20rpx;
}

.welcome-right {
  position: absolute;
  right: 0;
  left: 50%;
  top: 0;
  bottom: 0;
  padding: 20rpx;
}

.aaatitle {
  position: absolute;
  left: 300rpx;
  top: 600rpx;
  color: #fff;
  font-size: 80rpx;
}

.aaasubtitle {
  position: absolute;
  left: 300rpx;
  top: 720rpx;
  color: #fff;
  font-size: 40rpx;
}

.welcome-swiper {
  position: absolute;
  top: 0;
  left: 10px;
  right: 10px;
  /* height: 950rpx; */
  height: 80%;
}

.welcome-swipertitle {
  position: absolute;
  left: 10px;
  right: 10px;
  top: 80%;
  /* top: 950rpx; */
  /* bottom: 180rpx; */
  padding: 10px;
  text-align: center;
  vertical-align: middle;
  font-size: 30rpx;
}

.welcome-swiper-item {
  position: relative;
  padding: 20px 0 0 20px;
  /* height: 850rpx; */
  height: 90%;
  text-align: center;
}

.welcome-swiper-item-image {
  box-shadow: -8px 8px 20px #888;
  /* height: 350px; *//* width: 100%; */
}

.welcome-swiper-item-icon {
  position: absolute;
  left: 0;
  top: 0;
  width: 30px;
  height: 30px;
  background-color: #2db7f5;
  border: 1px solid #2db7f5;
  border-radius: 50%;
  text-align: center;
  padding: 10px;
}
.welcome-bottom-btnform{
  position: fixed;
  /* top:540px; */
  left: 20rpx;
  right: 20rpx;
  bottom: 40rpx;
  height: 140rpx;
  text-align: center;
}
.welcome-bottom-btnform-form{
  position: absolute;
  top:50%;
  margin-top:-70rpx;
  left: 0;
  right: 0;
  height: 140rpx;
  text-align: center;
}
.welcome-bottom-btnform-btn{
  width: 100rpx;
  height: 100rpx;
  /* border: 1px solid #2db7f5; */
  border-radius: 50%;
  /* background-color: #2db7f5; */
  text-align: center;
  padding: 20rpx;
  display: inline-block;
  position: relative;
}

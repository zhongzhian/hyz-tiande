/* pages/mine/carplace/carplace.wxss */

page {
  background-color: #3166b4;
}

.position-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.result-body {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 140px;
}

movable-view {
  display: flex;
  align-items: center;
  justify-content: center;
  /* height: 1000px;
  width: 1000px; */
  width: 1920px;
  height: 1080px;
  /* background: #fff; */
  color: #1aad19;
}

movable-area {
  height: 100%;
  width: 100%;
  background-color: #3166b4;
  overflow: hidden;
}

.pointdefault {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  position: absolute;
  margin-left: -5px;
  margin-top: -5px;
  z-index: 1;
}

.aniposition {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  position: absolute;
  margin-left: -5px;
  margin-top: -5px;
  left: 0;
  top: 0;
  border: solid 1px #f90;
  background-color: #f90;
}

.carposition {
  border: solid 1px #ed3f14;
  background-color: #ed3f14;
  left: 570px;
  top: 675px;
}

.personposition {
  border: solid 1px #09ff00;
  background-color: #09ff00;
  left: 770px;
  top: 775px;
}

.pointposition {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  position: absolute;
  margin-left: -3px;
  margin-top: -3px;
  border: solid 1px hsl(54, 100%, 50%);
  background-color: hsl(54, 100%, 50%);
  left: 770px;
  top: 775px;
}

.lineStyle {
  position: absolute;
  height: 4px;
  background-color: #f90;
}

.lineStyle-jiantou{
  position:absolute;
  top:-7px;
}

.lineStyle-jiantou-icon{
  position:absolute;
  left:-12px;
}

.dotposition {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  position: absolute;
  margin-left: -3px;
  margin-top: -3px;
  border: solid 1px #f90;
  background-color: #f90;
  left: 770px;
  top: 775px;
}

.info-view {
  padding: 5px;
  position: absolute;
  bottom: 70px;
  left: 0;
  right: 0;
  height: 60px;
  text-align: center;
  border-top: solid 1px #2d8cf0;
}

.info-carnum {
  position: relative;
  color: #dddee1;
  font-size: 18px;
  text-align: center;
  display: inline-block;
  width: 33%;
}

.info-desc {
  position: absolute;
  width: 100%;
  bottom: -16px;
  left: 0;
  right: 0;
  font-size: 12px;
  color: #dddee1;
  font-weight: 200;
}

.formbtn {
  padding: 10px 25px;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  text-align: center;
  background-color: #fff;
}

.formbtn-btn {
  display: inline-block;
  position: relative;
  width: 40px;
  height: 40px;
  line-height: 40px;
  font-size: 20px;
  border: 1px solid #80848f;
  border-radius: 20px;
}

.position-icon {
  position: absolute;
  top: 5px;
  left: 5px;
}

.position-disabled {
  color: #bbbec4 !important;
  border-color: #bbbec4 !important;
}

.position-text {
  position: absolute;
  bottom: -25px;
  width: 40px;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #495060;
  font-weight: 300;
}

.position-region {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  right: 40rpx;
  height: 200rpx;
  z-index: 1;
}

.position-region-point {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.position-region-text {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #fff;
}

  </i-button> -->

  <i-button i-class="step-btn2" bind:click="goPosition" type="primary" shape="circle" size="small">
    引导车位
  </i-button>
  <i-button i-class="step-btn2" bind:click="payFee" type="success" shape="circle" size="small">
    缴费
  </i-button>
</view>

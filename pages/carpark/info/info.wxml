<view class="step-view">
  <image class="image" src="{{info.vehiclePicture}}" lazy-load="true" mode="aspectFit" style="width: 100%; height: 100%;" />
</view>

<view class="info-detail">
  <view class="info-detail-item2">
    <text class="info-detail-label">停车时间:</text>
    <text class="info-detail-text">{{info.parkingTime || '-'}}</text>
  </view>
  <view class="info-detail-item2">
    <text class="info-detail-label">停车场:</text>
    <text class="info-detail-text">{{info.parkingLot.name || '-'}}</text>
  </view>
  <view class="info-detail-item2">
    <text class="info-detail-label">楼层:</text>
    <text class="info-detail-text">{{info.parkingLot.floor || '-'}}</text>
  </view>
  <view class="info-detail-item2">
    <text class="info-detail-label">车位号:</text>
    <text class="info-detail-text">{{info.serialNumber || '-'}}</text>
  </view>
  <view class="info-detail-item2">
    <text class="info-detail-label">车位类型:</text>
    <text class="info-detail-text">{{info.psType || '-'}}</text>
  </view>
</view>
<view class="formbtn">
  <!-- <i-button i-class="step-btn" bind:click="goPosition" type="primary" shape="circle" size="small">

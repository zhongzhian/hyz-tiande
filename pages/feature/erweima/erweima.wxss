/* pages/feature/erweima/erweima.wxss */

.erweima-container {
  position: absolute;
  top: 50px;
  left: 30px;
  right: 30px;
  bottom: 100px;
  text-align: center;
  border-radius: 10rpx;
  z-index: 10;
}

.erweima-code-title {
  padding: 50rpx 20rpx 10rpx;
  font-size: 40rpx;
}

.erweima-code-subtitle {
  padding: 10rpx 20rpx 50rpx;
  font-size: 24rpx;
}

.erweima-code-image {
  position: relative;
  display: inline-block;
  width: 500rpx;
  height: 500rpx;
}

.erweima-canvas {
  position: relative;
  display: inline-block;
  width: 250px;
  height: 250px;
}

.erweima-errorMsg{
  padding:20rpx;
  position: absolute;
  top:50%;
  left: 20rpx;
  right:20rpx;
  text-align: center;
}

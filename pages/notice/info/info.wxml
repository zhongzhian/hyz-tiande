<!--pages/notice/info/info.wxml-->
<import src="../../../common/foot.wxml" />
<view class="normal-container">
  <form bindsubmit="noticeSubmit" report-submit>
    <view class="normal-panel" style='top:20rpx;'>
      <view class="normal-panel-title">
        新公告
      </view>
      <i-panel>
        <!-- <i-input title="信息来源" value="{{ noticefrom }}" disabled />
        <i-input title="时间" value="{{ noticeDate }}" disabled />
        <i-input title="地点" value="{{ region }}" disabled /> -->
        <view class="form-row">
          <view class="notice-form-label color-subcontent floatleft">信息来源</view>
          <view class="notice-form-content-content floatleft">{{noticefrom}}
          </view>
        </view>
        <view class="form-row">
          <view class="notice-form-label color-subcontent floatleft">时间</view>
          <view class="notice-form-content-content floatleft">{{noticeDate}}
          </view>
        </view>
        <view class="form-row">
          <view class="notice-form-label color-subcontent floatleft">地点</view>
          <view class="notice-form-content-content floatleft">{{region}}
          </view>
        </view>
        <view class="notice-form-label color-subcontent">内容</view>
        <view class="notice-form-content">
          <view class="notice-form-content-content">{{content}}
          </view>
        </view>
        <view class="notice-form-label color-subcontent">备注</view>
        <view class="notice-form-content">
          <view class="notice-form-content-content">{{remark}}
          </view>
        </view>
      </i-panel>
      <view class="normal-panel-btnform">
        <button formType="submit" type="primary">
          确定
        </button>
      </view>
      <i-spin size="large" fix wx:if="{{ spinShow }}"></i-spin>
    </view>
  </form>
</view>
<i-toast id="toast" />
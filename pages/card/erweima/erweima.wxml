<!--pages/feature/erweima/erweima.wxml-->
<view class="normal-container" style='background-color:#464854;'>
  <view class="erweima-container color-bg">
    <view class='erweima-code-title color-content'>{{ticketTypeInfo.couponName || "优惠券"}}</view>
    <view class='erweima-code-subtitle color-subcontent'>请用小程序扫码领取优惠券</view>
    <!-- <image class="erweima-code-image" src="../../../image/kaikaerweima.jpg" mode="cover"></image> -->
    <canvas class='erweima-canvas' canvas-id='canvas'></canvas>
    <view wx:if="{{hasPick}}" class="erweima-canvas-cover">
      <i-icon i-class="" type="success" size="100" color="#19be6b"></i-icon>
    </view>
    <view wx:if="{{errorMsg}}" class="erweima-errorMsg">{{errorMsg}}</view>
    <!-- <view hidden="{{!showFlash}}" bindtap='flashCode' class='erweima-code-subtitle color-green' style='font-size:28rpx;'>
      <i-icon type="refresh" size="16" color="#19be6b"></i-icon>再发一张</view> -->
    <view wx:if="{{hasPick}}" style='position:absolute;bottom:100rpx;width:100%;'>
      <button type="primary" size="mini" bindtap='flashCode'>
        再发一张
      </button>
    </view>
    <i-spin size="large" fix wx:if="{{ spinShow }}"></i-spin>
  </view>
</view>
<i-toast id="toast" />
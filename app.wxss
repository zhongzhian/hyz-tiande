/* 常规 start */

.formid-form {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.formid-btn {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  border: none !important;
  text-align: center;
  padding: 20rpx;
  margin: 0;
  line-height: 1.5;
}

.container {
  height: 100%;
  align-items: center;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f8f8f9;
}

page {
  background-color: #f8f8f9;
}

.app-foot {
  text-align: center;
}

.normal-container {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  /* background-color: #464854; */
  overflow-y: auto;
}

.mg20 {
  margin: 20rpx;
}

.mt200 {
  margin-top: 200rpx;
}

.mt100 {
  margin-top: 100rpx;
}

.mt50 {
  margin-top: 50rpx;
}

.mt20 {
  margin-top: 20rpx;
}

.wd40cen {
  width: 40%;
}

.wd100cen {
  width: 100%;
}

.text-center {
  text-align: center;
  /* width: 100%; */
}

.color-red {
  color: #ed3f14 !important;
}

.color-yellow {
  color: #f90 !important;
}

.color-green {
  color: #19be6b !important;
}

.color-title {
  color: #1c2438 !important;
}

.color-content {
  color: #495060 !important;
}

.color-subcontent {
  color: #80848f !important;

  top:10rpx;
  position: relative;
  width: 100%;
}

.normallist-list-item {
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  color: #80848f;
  margin-bottom: 10rpx;
}

.normallist-list-item-content {
  padding: 20rpx;
  position: relative;
}

.normallist-list-item-text {
  font-size: 36rpx;
  color: #495060;
  margin-right: 20rpx;
}

.normallist-list-item-desc {
  float: right;
}

.normallist-list-item-detail {
  padding: 20rpx;
}

.normallist-list-item-detail-desc {
  padding: 10rpx;
}

.normallist-list-item-toolbar {
  padding: 20rpx 20rpx 0rpx;
  border-top: 2rpx solid #dddee1;
  height: 40rpx;
}

.normallist-list-item-toolbar-action {
  display: inline-block;
}

.floatright {

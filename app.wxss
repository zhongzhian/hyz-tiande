.normal-modalline{
  padding:5rpx 20rpx;
}
/* 常规 end */

/* 卡状panel start */

.normal-mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 4;
  background-color: rgba(0, 0, 0, 0.5);
}

.normal-panel {
  position: fixed;
  top: 50rpx;
  left: 50rpx;
  right: 50rpx;
  z-index: 5;
  background-color: #fff;
  border: solid 1px #f8f8f9;
  border-radius: 20rpx;
}

.normal-panel-title {
  font-size: 40rpx;
  text-align: center;
  padding: 40rpx;
  color: #1c2438;
  border-bottom: 1px solid #f5f7f9;
}

.normal-panel-content {
  padding: 30rpx;
  font-size: 28rpx;
  text-align: center;
  color: #495060;
  border-bottom: 1px solid #f5f7f9;
}

.normal-panel-desc {
  /* padding: 40rpx 0 0 0;
  font-size: 24rpx;
  text-align: center; */
  padding: 40rpx 30rpx 0 30rpx;
  font-size: 24rpx;
  /* text-align: center; */
  color: #495060;
  /* border-bottom: 1px solid #f5f7f9; */
}

.normal-panel-btnform {
  text-align: center;
  padding: 40rpx;
}

/* 卡状panel end */

.normal-btn {
  text-align: center;
  font-size: 60rpx;
  display: inline-block;
}

.erweima-view {
  position: fixed;
  right: 100rpx;
  bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #2db7f5;
  border-radius: 50%;
  background-color: #2db7f5;
  text-align: center;
  padding: 20rpx;
}

.erweima-png {
  width: 100%;
  height: 100%;
}

/* 会员页 上部 start */

.userinfo-view {
  width: 100%;
  padding: 20rpx 0rpx;
  height: 250rpx;
  position: relative;
  background: linear-gradient(to bottom, #464854, #2f323b);
}

.userinfo-card {
  /* border-top: 1px solid #fff; */
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  background-color: #fff;
  background: linear-gradient(to right, #ecd8da, #eccccf);
  /* background: url("../../image/cardbg.jpeg"); */
  position: absolute;
  height: 250rpx;
  bottom: 0;
  left: 50rpx;
  right: 50rpx;
}

.userinfo-left {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 20%;
  text-align: right;
  padding: 20rpx;
}

.userinfo-right {
  position: absolute;
  left: 20%;
  top: 0;
  bottom: 0;
  right: 0;
  text-align: left;
  padding: 20rpx;
}

.userinfo-bottom {
  position: absolute;
  left: 0;
  bottom: 50rpx;
  right: 0;
  height: 40rpx;
  text-align: left;
  padding: 0 40rpx;
  font-size: 30rpx;
}

.userinfo-image {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-title {
  font-size: 35rpx;
  position: absolute;
  left: 30rpx;
  top: 40rpx;
}

.userinfo-subtitle {
  font-size: 30rpx;
  position: absolute;
  left: 30rpx;
  top: 90rpx;
  /* color: #aaa; */
}

.userinfo-cardimage {
  position: absolute;
  right: 30rpx;
  bottom: 0;
  height: 270rpx;
  width: 300rpx;
}

.usermenu-view {
  height: 140rpx;
  background-color: #464854;
  width: 100%;
}

/* list */

.normallist-topbar {
  /* position: absolute;
